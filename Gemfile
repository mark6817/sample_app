source 'http://rubygems.org'

gem 'rails', '3.1.0'

# Bundle edge Rails instead:
# gem 'rails',     :git => 'git://github.com/rails/rails.git'

gem 'activerecord-jdbcsqlite3-adapter'

gem 'jruby-openssl'
### MMA gem 'json'
gem 'json-jruby'

### MMA Add rspec for testing.
### Tutorial book asked form rspec-rails version 2.0.1, webrat version 0.7.1.
### rspec-rails: contains unit test generators for rails
### rspec:  runs tests
### webrat: a testing utility.
group :development do
   gem 'rspec-rails'
end

group :test do
   gem 'rspec'
   gem 'webrat'
end

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails', "  ~> 3.1.0"
  gem 'coffee-rails', "~> 3.1.0"
  gem 'uglifier'
end

gem 'jquery-rails'

# Use unicorn as the web server
# gem 'unicorn'

# Deploy with Capistrano
# gem 'capistrano'

# To use debugger
# gem 'ruby-debug'

